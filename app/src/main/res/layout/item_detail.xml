<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/mainView">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="90dp"
            android:layout_marginLeft="@dimen/left_margin">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    app:srcCompat="@android:drawable/ic_menu_camera"
                    android:id="@+id/imageButton" />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="100dp"
                    app:srcCompat="@android:drawable/screen_background_dark_transparent"
                    android:id="@+id/imageView" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="Loai Hang Hoa"
                    android:layout_width="100dp"
                    android:paddingBottom="@dimen/element_padding"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvLHH" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/element_padding"
                    android:inputType="textPersonName"
                    android:text=""
                    android:ems="10"
                    android:id="@+id/editLHH" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="Gia Nhap"
                    android:layout_width="100dp"
                    android:paddingBottom="@dimen/element_padding"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvGiaNhap" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/element_padding"
                    android:inputType="textPersonName"
                    android:text=""
                    android:ems="10"
                    android:id="@+id/editGN" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:text="So Luong"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/element_padding"
                    android:id="@+id/tvSL" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/element_padding"
                    android:inputType="textPersonName"
                    android:text=""
                    android:ems="10"
                    android:id="@+id/editSL" />

            </LinearLayout>

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:id="@+id/btnAdd"
            android:text="Them hang hoa"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Ma Mat Hang"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/element_padding"
            android:id="@+id/tvMMH" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:paddingBottom="@dimen/element_padding"
            android:ems="10"
            android:id="@+id/editMMH" />

        <Button
            android:text="Barcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnBarcode" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="Nhan Hieu"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/element_padding"
                android:id="@+id/tvNH" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:paddingBottom="@dimen/element_padding"
                android:text=""
                android:ems="10"
                android:id="@+id/editNH" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Ten Hang Hoa"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/element_padding"
            android:id="@+id/tvTHH" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:paddingBottom="@dimen/element_padding"
            android:text=""
            android:ems="10"
            android:id="@+id/editTHH" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="Nha Cung Cap"
            android:layout_width="100dp"
            android:paddingBottom="@dimen/element_padding"
            android:layout_height="wrap_content"
            android:id="@+id/tvNCC" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/element_padding"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/editNCC" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="Gia Ban De Xuat"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/element_padding"
                android:id="@+id/TVGBL" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/element_padding"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/editGBDX" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:text="Ghi Chu"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/element_padding"
                android:id="@+id/tvGC" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/element_padding"
                android:inputType="textPersonName"
                android:text=""
                android:ems="10"
                android:id="@+id/editGC" />

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

    <Button
        android:text="Hoan Thanh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mainView"
        android:layout_centerInParent="true"
        android:layout_marginTop="59dp"
        android:id="@+id/btnDone" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_nh">

    </FrameLayout>

</RelativeLayout>